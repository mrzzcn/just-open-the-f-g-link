{
  "manifest_version": 3,

  "name": "Just open the f***g link",
  "description": "Just open the f***g link.",
  "version": "1.0",
  "icons": { "128": "icon.png" },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "permissions": [
    "webNavigation",
    "declarativeContent",
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "options.html"
  }
}
